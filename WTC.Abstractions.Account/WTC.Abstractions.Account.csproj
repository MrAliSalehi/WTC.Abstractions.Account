<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net6.0-windows;net7.0;net7.0-windows;net8.0;net8.0-windows</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Authors>Qwxp</Authors>
        <Description>WTelegramClient Abstractions for easier (Multiple) Account handling.</Description>
        <Copyright>Apache-2.0</Copyright>
        <PackageProjectUrl>https://github.com/MrAliSalehi/WTelegramClient.Abstractions.Account</PackageProjectUrl>
        <PackageIcon>logo.png</PackageIcon>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Version>1.0.0</Version>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="WTelegramClient" Version="3.6.4" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../LICENSE" Pack="true" PackagePath="/"/>
        <None Include="../README.md" Pack="true" PackagePath="/"/>
        <None Include="../logo.png" Pack="true" PackagePath="/"/>
    </ItemGroup>
</Project>
